<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/half_dimen"
    android:paddingLeft="@dimen/half_dimen"
    android:layout_marginTop="@dimen/default_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AboutRteActivity"
    tools:showIn="@layout/activity_about_rte">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/rte_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstParagraph"
                android:textAlignment="center"
                android:textSize="@dimen/default_margin"
                android:text="@string/option_about_rte"
                android:layout_margin="@dimen/half_dimen"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/secondParagraph"
                android:textSize="@dimen/default_margin"
                android:layout_margin="@dimen/half_dimen"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thirdParagraph"
                android:textAlignment="center"
                android:textSize="@dimen/default_margin"
                android:layout_margin="@dimen/half_dimen"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fourthParagraph"
                android:textAlignment="center"
                android:textSize="@dimen/default_margin"
                android:textStyle="bold"
                android:layout_margin="@dimen/half_dimen"
                android:layout_marginTop="@dimen/default_margin"
            />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/buttonStyle"
                android:layout_margin="@dimen/default_margin"
                android:id="@+id/volunteerSignUpButton"
                android:text="@string/button_volunteer_signup"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>